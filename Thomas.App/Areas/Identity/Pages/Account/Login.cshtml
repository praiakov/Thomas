@page
@model LoginModel

@{
    ViewData["Title"] = "Entre";
}

<div class="row text-center">
    <form class="form-signin" id="account" method="post">
        <img class="mb-4" src="~/img/logo.webp" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Entrar</h1>
        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
        <input asp-for="Input.Password" class="form-control" placeholder="Senha" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" asp-for="Input.RememberMe" /> Lembrar-me
            </label>
        </div>
        <button class="btn btn-lg btn-dark btn-block" type="submit">Entrar</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<link href="~/css/login.css" rel="stylesheet" />

