@model Thomas.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Editar " + Model.Nome;
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <vc:Summary></vc:Summary>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contato" class="control-label"></label>
                <input asp-for="Contato" class="form-control" />
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Ativo)
                <input type="checkbox" data-onstyle="success" data-size="small" class="form-check-input" asp-for="Ativo" />
            </div>
            <div class="form-group">
                <a class="btn btn-outline-info" asp-action="Index"><span class="fa fa-arrow-alt-circle-left"></span></a>
                <input value="Salvar" type="submit" class="btn btn-outline-success float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
