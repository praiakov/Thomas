@model Thomas.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Excluir " + Model.Nome;
}

<h5>@ViewData["Title"]</h5>
<hr />
<div>
    <span class="text-danger">Esta ação será permanente!</span>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a class="btn btn-outline-info" asp-action="Index"><span class="fa fa-arrow-alt-circle-left"></span></a>
            <input type="submit" value="Excluir" class="btn btn-outline-danger float-right" />
        </form>
    </div>
</div>