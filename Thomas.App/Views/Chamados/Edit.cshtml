@model Thomas.App.ViewModels.ChamadoViewModel

@{
    ViewData["Title"] = "Editar " + Model.Fornecedor.Nome;
}

<h4 style="padding-top: 30px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FornecedorId" />

            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label><br />
                <label><b>@Model.Fornecedor.Nome</b></label>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAbertura" class="control-label"></label>
                <input asp-for="DataAbertura" class="form-control" />
                <span asp-validation-for="DataAbertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFechamento" class="control-label"></label>
                <input asp-for="DataFechamento" class="form-control" />
                <span asp-validation-for="DataFechamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoStatus"></label>
                <div>
                    <input type="radio" value="1" asp-for="TipoStatus" checked="@(Model.TipoStatus == 1)" /> Aberto
                    <input type="radio" value="2" asp-for="TipoStatus" checked="@(Model.TipoStatus == 2)" /> Fechado
                    <input type="radio" value="2" asp-for="TipoStatus" checked="@(Model.TipoStatus == 2)" /> Pausado
                    <input type="radio" value="2" asp-for="TipoStatus" checked="@(Model.TipoStatus == 2)" /> Cancelado
                </div>
                <div>
                    &nbsp;
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
