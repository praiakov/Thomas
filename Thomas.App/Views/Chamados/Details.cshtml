@using Thomas.App.Extensions;
@model Thomas.App.ViewModels.ChamadoViewModel

@{
    ViewData["Title"] = "Detalhes";

}

<h5>@ViewData["Title"]</h5>
<hr />
<div>
    <span>Informação somente leitura</span>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroChamado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroChamado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAbertura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAbertura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFechamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFechamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoStatus)
        </dt>
        <dd class="col-sm-10">
            @this.FormataStatus(Model.TipoStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-8">
        <a class="btn btn-outline-info" asp-action="Index"><span class="fa fa-arrow-alt-circle-left"></span></a>
        <a class="btn btn-outline-primary float-right" asp-action="Edit" asp-route-id="@Model.Id"><span class="fa fa-pencil-alt"></span></a>
    </div>
</div>

