@model Thomas.App.ViewModels.ChamadoViewModel

@{
    ViewData["Title"] = "Excluir Chamado";
}

<h5>@ViewData["Title"]</h5>
<hr/>
<div>
    <span class="text-danger">Esta ação será permanente!</span>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroChamado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroChamado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAbertura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAbertura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFechamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFechamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a class="btn btn-outline-info" asp-action="Index"><span class="fa fa-arrow-alt-circle-left"></span></a>
            <input type="submit" value="Excluir" class="btn btn-outline-danger float-right" />
        </form>
    </div>    
</div>
